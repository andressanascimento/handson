{% extends '::base.html.twig' %}


{% block title %}
    Catalogo{{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for product in products %}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail" >
                        <img src="{{ asset(product.imagemPath) }}" alt="{{ product.nome }}" style="height: 180px; display: block;">
                        <div>
                            <div class="caption">
                                <h3>{{ product.nome }}</h3>
                                <p>{{ product.descricao }}</p>
                            </div>
                        </div>
                        <div>
                            <div class="caption">
                                <p class="lead">R$ {{ product.preco }}</p>
                                <p><a href="{{ path('_produto', {'id': product.id}) }}" class="btn btn-primary btn-lg btn-block">Comprar</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}